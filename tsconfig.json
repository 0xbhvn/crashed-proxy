{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": false,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
